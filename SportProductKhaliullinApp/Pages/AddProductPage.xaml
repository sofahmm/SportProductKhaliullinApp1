<Page x:Class="SportProductKhaliullinApp.Pages.AddProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SportProductKhaliullinApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddProductPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Добавление нового товара"
                   Grid.Column="2"
                   Grid.ColumnSpan="4"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="30"
                   FontWeight="DemiBold"/>
        <Image Grid.Column="5"
               Grid.Row="1"
               Grid.ColumnSpan="3"
               Grid.RowSpan="3"
               x:Name="ProductImg"/>
        <Button x:Name="AddImageBtn"
                Click="AddImageBtn_Click"
                Grid.Column="5"
                Grid.Row="4"
                Grid.ColumnSpan="3"
                Margin="30 5"
                Content="Добавить фото"
                FontSize="20"
                Background="#556B2F"
                Foreground="#FFFFE0"/>
        <TextBlock Grid.Row="1"
                   Grid.ColumnSpan="2"
                   Text="Название товара"
                   FontSize="24"
                   FontWeight="Medium"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        <TextBox x:Name="NameTb"
                 Grid.ColumnSpan="2"
                 Grid.Row="2"
                 Margin="10 5"
                 FontSize="20"
                 Padding="5 0"/>
        <TextBlock Text="Описание товара"
                   Grid.Column="2"
                   Grid.ColumnSpan="3"
                   Grid.Row="1"
                   FontSize="24"
                   FontWeight="Medium"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        <TextBox x:Name="DescriptionTb"
                 Grid.Column="2"
                 Grid.ColumnSpan="3"
                 Grid.RowSpan="2"
                 Grid.Row="2"
                 Margin="10 5"
                 Padding="5 0"
                 FontSize="20"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"/>
        <TextBlock Grid.Row="4"
                   Grid.ColumnSpan="2"
                   Text="Категория товара"
                   FontSize="24"
                   FontWeight="Medium"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        <ComboBox x:Name="CategoryCmb"
                 Grid.ColumnSpan="2"
                 Grid.Row="5"
                 Margin="10 5"
                 FontSize="20"
                 Padding="5 0"
                  ItemsSource="{Binding categories}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Name}"
                                   FontSize="18"
                                   FontWeight="DemiBold"/>
                        <TextBlock Text="{Binding Description}"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <TextBlock Text="Цена товара (за шт)"
                   TextWrapping="Wrap"
                   Grid.Column="2"
                   Grid.ColumnSpan="2"
                   Grid.Row="4"
                   FontSize="24"
                   FontWeight="Medium"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        <TextBox x:Name="PriceTb"
                 Grid.Column="2"
                 Grid.ColumnSpan="2"
                 Grid.Row="5"
                 Padding="5 0"
                 FontSize="20"
                 Margin="5 5"
                 Width="150"
                 HorizontalAlignment="Left"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"/>
        <TextBlock Grid.Column="2"
                   Grid.ColumnSpan="2"
                   Grid.Row="5"
                   Text="руб."
                   FontSize="20"
                   Margin="0 0 0 0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"/>
        <TextBlock Text="Количество на складе"
                   Grid.Row="6"
                   Grid.RowSpan="2"
                   FontSize="24"
                   FontWeight="Medium"
                   Grid.ColumnSpan="3"
                   VerticalAlignment="Center"/>
        <TextBox x:Name="StockTb"
                 Grid.Column="3"
                 Grid.ColumnSpan="2"
                 Grid.Row="6"
                 Grid.RowSpan="2"
                 Height="50"
                 Padding="5 0"
                 FontSize="20"
                 Margin="5 5"
                 Width="150"
                 HorizontalAlignment="Left"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"/>
        <Button x:Name="SaveBtn"
                Click="SaveBtn_Click"
                Grid.Column="5"
                Grid.Row="6"
                Grid.RowSpan="2"
                Grid.ColumnSpan="3"
                Margin="30 5"
                Content="Сохранить"
                FontSize="30"
                Background="#8B0000"
                Foreground="#FFFFE0"/>
    </Grid>
</Page>
