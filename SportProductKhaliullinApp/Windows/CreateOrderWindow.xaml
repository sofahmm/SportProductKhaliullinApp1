<Window x:Class="SportProductKhaliullinApp.Windows.CreateOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportProductKhaliullinApp.Windows"
        mc:Ignorable="d"
        Title="CreateOrderWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Формирование заказа"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"/>
        <TextBlock Text="Менеджер:"
                FontSize="22"
                Grid.Row="1"
                Grid.ColumnSpan="2"
                VerticalAlignment="Bottom"
                Margin="0 0 0 10"
                HorizontalAlignment="Center"/>
        <ComboBox x:Name="ManagerCmb"
                  Margin="10 15"
                  FontSize="20"
                  Width="250"
                  Grid.Row="2"
                  Grid.ColumnSpan="2"
                  Padding="5 0"
                  ItemsSource="{Binding manager}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Firstname}"/>
                        <TextBlock Text="{Binding Name}"/>
                        <TextBlock Text="{Binding Patronymic}"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <TextBlock Text="Покупатель:"
                FontSize="22"
                Grid.Row="3"
                Grid.ColumnSpan="2"
                VerticalAlignment="Bottom"
                Margin="0 0 0 10"
                HorizontalAlignment="Center"/>
        <StackPanel Grid.Row="4"
                 Grid.ColumnSpan="2"
                 Orientation="Horizontal"
                 HorizontalAlignment="Center">
            <ComboBox x:Name="NamePCmb"
                   Margin="10 15"
                   FontSize="20"
                   Width="250"
                   Padding="5 0"
                      ItemsSource="{Binding customers}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding FirstName}"/>
                            <TextBlock Text="{Binding LastName}"/>
                            <TextBlock Text="{Binding Phone}"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Button Height="40"
                 Width="40"
                 HorizontalAlignment="Left"
                    x:Name="AddCustomerBtn"
                    Click="AddCustomerBtn_Click">
                <Image Source="/Recources/plus.png"/>
            </Button>
        </StackPanel>

        <DatePicker Grid.Row="5"
                 Margin="5 5 5 10"
                    x:Name="OrderDateDp"
                 VerticalAlignment="Bottom"/>
        <TextBlock Grid.Row="5"
                HorizontalAlignment="Center"
                Text="Дата заказа"
                FontSize="22"
                VerticalAlignment="Top"/>

        <TextBlock Text="Итоговая сумма:"
                Grid.Column="1"
                Grid.Row="5"
                HorizontalAlignment="Center"
                Margin="5 5 5 10"
                FontSize="22"/>
        <TextBox Grid.Column="1"
              Grid.Row="5"
              Height="40"
                 x:Name="TotalAmountTb"
              Width="100"
              Margin="20 0 0 0"
              VerticalAlignment="Bottom"
              HorizontalAlignment="Left"/>
        <TextBlock Grid.Row="5"
                Grid.Column="1"
                Text="Руб."
                Margin="0 0 10 0"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                FontSize="22"/>

        <ListView Grid.Row="1"
          Grid.ColumnSpan="2"
          Grid.RowSpan="3"
                  Grid.Column="2"
          x:Name="ProductsLv"
          ItemsSource="{Binding products}"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
          HorizontalContentAlignment="Stretch"
          VerticalContentAlignment="Stretch">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="1"
                    BorderBrush="Gray">

                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <CheckBox x:Name="ChoiseProductCb"
                                      Height="20"
                                      Checked="ChoiseProductCb_Checked"/>
                            <Image Grid.RowSpan="2"
                           Margin="30 0 0 0"
                       Height="100"
                       Width="100">
                                <Image.Source>
                                    <Binding Path="ImageUrl">
                                        <Binding.TargetNullValue>
                                            <ImageSource>/Recources/pusto.png</ImageSource>
                                        </Binding.TargetNullValue>
                                    </Binding>
                                </Image.Source>
                            </Image>
                            <StackPanel Grid.Column="1"
                            Margin="10 0">
                                <TextBlock VerticalAlignment="Center"
                               FontSize="18"
                               FontWeight="Bold"
                               Text="{Binding Name}"/>
                                <TextBlock VerticalAlignment="Center"
                               FontSize="14"
                               Text="{Binding Categories.Name, StringFormat={}Категория {0}}"/>
                                <TextBlock VerticalAlignment="Center"
                               Text="{Binding Stock, StringFormat={} Остаток {0}}"/>
                                <TextBlock VerticalAlignment="Center"
                               Text="{Binding Price, StringFormat={} Цена(шт) {0}}"/>
                            </StackPanel>
                            <!--<StackPanel Orientation="Vertical"
                            Grid.Column="2"
                            Grid.RowSpan="3"
                            HorizontalAlignment="Center">-->
                                <!--<StackPanel Orientation="Horizontal"
                                    Margin="0 5"
                                    HorizontalAlignment="Right">
                                    <Button x:Name="MinusShtukaBtn"
                                Height="25"
                                Width="25"
                                Margin="10 0"
                                Click="MinusShtukaBtn_Click">
                                        <Image Source="/Recources/remove.png"/>
                                    </Button>
                                    <Button x:Name="PlusShtukaBtn"
                                Height="25"
                                Width="25"
                                Margin="10 0"
                                Click="PlusShtukaBtn_Click">
                                        <Image Source="/Recources/plus.png"/>
                                    </Button>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right">

                                    <Button x:Name="EditBtn"
                                Click="EditBtn_Click"
                                Height="30"
                                Width="30"
                                Margin="10 0">
                                        <Image Source="/Recources/edit.png"/>
                                    </Button>
                                    <Button x:Name="DeleteBtn"
                                Click="DeleteBtn_Click"
                                Height="30"
                                Width="30"
                                Margin="10 0">
                                        <Image Source="/Recources/delete.png"/>
                                    </Button>
                                </StackPanel>
                            </StackPanel>-->

                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <!--<Frame Grid.Column="2"
               Grid.ColumnSpan="2"
               Grid.Row="1"
               Grid.RowSpan="4"
               x:Name="CustomerFr"
               NavigationUIVisibility="Hidden"/>-->
        <Button x:Name="CreateOrderBtn"
                Content="Сформировать заказ"
                Grid.Column="2"
                Grid.Row="5"
                Margin="30 5"
                Click="CreateOrderBtn_Click"/>
        <Button  Grid.Column="3"
                 Grid.Row="5"
                 Margin="30 5"
                 Content="туда"
                 x:Name="TudaBtn"
                 Click="TudaBtn_Click"/>    
    </Grid>
</Window>
