<Window x:Class="SportProductKhaliullinApp.Windows.KorzinaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportProductKhaliullinApp.Windows"
        mc:Ignorable="d"
        Title="KorzinaWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Формирование заказа"
                   Grid.Column="1"
                   Grid.ColumnSpan="2"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="24"
                   FontWeight="Bold"/>
        <TextBlock Text="Менеджер:"
                   FontSize="22"
                   Grid.Row="1"
                   Grid.ColumnSpan="2"
                   VerticalAlignment="Top"
                   Margin="0 0 0 10"
                   HorizontalAlignment="Center"/>
        <TextBlock Grid.Row="1"
                   VerticalAlignment="Bottom"
                 x:Name="NameMTbl"
                 Grid.ColumnSpan="2"
                 Margin="30 15"
                 FontSize="20"
                 Padding="5 0"/>
        <TextBlock Text="Покупатель:"
                   FontSize="22"
                   Grid.Row="2"
                   Grid.ColumnSpan="2"
                   VerticalAlignment="Top"
                   Margin="0 0 0 10"
                   HorizontalAlignment="Center"/>
        <TextBlock Grid.Row="2"
                   VerticalAlignment="Bottom"
                   x:Name="NamePTbl"
                   Grid.ColumnSpan="2"
                   Margin="30 15"
                   FontSize="20"
                   Padding="5 0"/>
        <TextBlock Grid.Row="3"
                   Grid.ColumnSpan="2"
                   HorizontalAlignment="Center"
                   Text="Дата заказа"
                   FontSize="22"
                   VerticalAlignment="Top"/>
        <TextBlock Grid.Row="3"
           VerticalAlignment="Bottom"
         x:Name="DateOrderTbl"
         Grid.ColumnSpan="2"
         Margin="30 15"
         FontSize="20"
         Padding="5 0"/>
        <TextBlock Text="Итоговая сумма:"
                   Grid.Column="0"
                   Grid.Row="4"
                   HorizontalAlignment="Center"
                   Margin="5 5 5 10"
                   FontSize="22"/>
        <TextBlock Grid.Column="0"
                 Grid.Row="4"
                 Height="40"
                 Width="100"
                 Margin="20 0 0 0"
                   x:Name="TotalAmountTbl"
                 VerticalAlignment="Bottom"
                 HorizontalAlignment="Left"/>
        <TextBlock Grid.Row="4"
                   Grid.Column="0"
                   Text="Руб."
                   Margin="0 0 10 0"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Right"
                   FontSize="22"/>
     
        <TextBlock Text="Товар:"
                   Grid.Column="2"
                   HorizontalAlignment="Center"
                   Grid.Row="1"
                   FontSize="22"
                   VerticalAlignment="Top"
                   Margin="0 0 0 10"/>
        <ComboBox x:Name="NameProductCmb"
                  Margin="10 15"
                  FontSize="20"
                  Grid.Column="2"
                  Grid.Row="1"
                  VerticalAlignment="Bottom"
                  Padding="5 0"
                  ItemsSource="{Binding products}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Name}"/>
                        <TextBlock Text="{Binding Price}"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <StackPanel Orientation="Horizontal"
                    Grid.Column="3"
                    Grid.Row="1"
                    HorizontalAlignment="Center">
            <Button x:Name="MinusShtukaBtn"
                Height="30"
                Width="30"
                Margin="10 0"
                Click="MinusShtukaBtn_Click">
            <Image Source="/Recources/remove.png"/>
        </Button>
        <TextBox x:Name="ShtukaTb"
                 Margin="10 0"
                 Width="70"
                 Height="50"/>
        <TextBlock Text="шт." 
                   VerticalAlignment="Center"
                   FontSize="22"/>
        <Button x:Name="PlusShtukaBtn"
                Height="30"
                Width="30"
                Margin="10 0"
                Click="PlusShtukaBtn_Click">
            <Image Source="/Recources/plus.png"/>
        </Button>
        </StackPanel>
        <Button x:Name="AddProdBtn"
                Grid.Column="2"
                Grid.Row="2"
                Height="50"
                Width="150"
                Content="Add"
                Click="AddProdBtn_Click"/>

        <ListView Grid.Row="3"
                  Grid.Column="2"
                  Grid.RowSpan="2"
                  x:Name="OrderLv"
                  Grid.ColumnSpan="2">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>

                        </Grid.RowDefinitions>
                        <TextBlock VerticalAlignment="Center"
                                   Grid.Row="0"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Text="{Binding Products.Name}"/>
                        <TextBlock VerticalAlignment="Center"
                                   FontSize="14"
                                   Grid.Row="0"
                                   Text="{Binding Quantity}"/>


                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
